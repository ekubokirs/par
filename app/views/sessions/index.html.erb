<h1>ParDIY</h1>
<div class="row">
  <div class="large-6 columns">
    <ul data-orbit>
      <li>
        <img src="../assets/goodyBag.JPG" alt="Ninjago Goody Bags" class="homepage-orbit" />
      </li>
      <li class="active">
        <img src="../assets/pinTheTail.JPG" alt="Ninjago" />
      </li>
      <li>
        <img src="../assets/img/examples/launch-orbit.jpg" alt="slide 3" />
      </li>
    </ul>
  </div>
  <div class="large-6 columns">
    <h2>Sign in</h2>

    <%= form_for(:user, url: session_path(:user)) do |f| %>
      <div><%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %></div>

      <div><%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %></div>

      <%# if devise_mapping.rememberable? -%>
        <!-- div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div> -->
      <%# end -%>

      <div><%= f.submit "Sign in" %></div>
    <% end %>

    <a href="#" data-reveal-id="signUpModal">Sign Up</a>

    <div id="signUpModal" class="reveal-modal" data-reveal aria-labelledby="SignUp" aria-hidden="true" role="dialog">
      <%= form_for :user, :url => registration_path(:user) do |f| %>
        <%#= f.error_messages %>
        <p><%= f.label :email %></p>
        <p><%= f.text_field :email %></p>

        <p><%= f.label :password %></p>
        <p><%= f.password_field :password %></p>

        <p><%= f.label :password_confirmation %></p>
        <p><%= f.password_field :password_confirmation %></p>

        <p><%= f.submit "Sign up" %></p>
        <a class="close-reveal-modal" aria-label="Close">&#215;</a>
      <% end %>
    </div>
  </div>
</div>
